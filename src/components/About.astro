</section>

<script>
  // Add scroll animation for credentials
  document.addEventListener('DOMContentLoaded', () => {
    const credentials = document.querySelectorAll('.flex.items-start.space-x-3');
    
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          setTimeout(() => {
            (entry.target as HTMLElement).style.opacity = '1';
            (entry.target as HTMLElement).style.transform = 'translateY(0)';
          }, index * 100);
        }
      });
    }, observerOptions);
    
    credentials.forEach(credential => {
      (credential as HTMLElement).style.opacity = '0';
      (credential as HTMLElement).style.transform = 'translateY(20px)';
      (credential as HTMLElement).style.transition = 'all 0.6s ease';
      observer.observe(credential);
    });

    // CTA button interaction
    const ctaButton = document.querySelector('.btn-primary');
    ctaButton?.addEventListener('click', (e) => {
      e.preventDefault();
      document.getElementById('contacto')?.scrollIntoView({behavior: 'smooth'});
    });
  });
</script>