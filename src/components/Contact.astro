---
// Contact component refactor: usa solo colores estándar de Tailwind (sin secondary/accent personalizados)
---

<section id="contacto" class="py-20 bg-black">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <span class="inline-block bg-yellow-400/20 text-yellow-400 px-4 py-1.5 rounded-full text-xs font-semibold tracking-wide mb-5">Contacto</span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-extrabold text-white mb-6 leading-tight">
        ¡Comencemos tu <span class="bg-gradient-to-r from-yellow-400 to-yellow-500 bg-clip-text text-transparent">Transformación</span>!
      </h2>
      <p class="text-lg md:text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
        ¿Listo para dar el primer paso? Agenda tu consulta gratuita. Te responderé en menos de 24 horas.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 items-start">
      <!-- Form Card -->
      <div class="relative bg-gradient-to-br from-gray-900 to-black rounded-2xl shadow-2xl border border-yellow-400/30 p-8 md:p-10 w-full">
        <h3 class="text-2xl font-semibold text-white mb-8 flex items-center gap-3">
          <span class="flex items-center justify-center w-12 h-12 rounded-xl bg-yellow-400 text-black text-lg font-bold shadow-lg">@</span>
          <span>Envíame un mensaje</span>
        </h3>

        <form id="contact-form" class="space-y-8" novalidate>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div data-field-wrapper class="space-y-2">
              <label for="firstName" class="block text-sm font-semibold text-yellow-400">Nombre *</label>
              <input id="firstName" name="firstName" data-required type="text" placeholder="Tu nombre" class="w-full rounded-lg border border-yellow-400/30 bg-gray-800/50 px-4 py-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 focus:bg-gray-800 transition-all duration-200" />
              <small class="hidden text-xs font-medium text-red-400" data-error></small>
            </div>
            <div data-field-wrapper class="space-y-2">
              <label for="lastName" class="block text-sm font-semibold text-yellow-400">Apellido *</label>
              <input id="lastName" name="lastName" data-required type="text" placeholder="Tu apellido" class="w-full rounded-lg border border-yellow-400/30 bg-gray-800/50 px-4 py-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 focus:bg-gray-800 transition-all duration-200" />
              <small class="hidden text-xs font-medium text-red-400" data-error></small>
            </div>
          </div>

          <div data-field-wrapper class="space-y-2">
            <label for="email" class="block text-sm font-semibold text-yellow-400">Email *</label>
            <input id="email" name="email" data-required data-type="email" type="email" placeholder="tucorreo@ejemplo.com" class="w-full rounded-lg border border-yellow-400/30 bg-gray-800/50 px-4 py-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 focus:bg-gray-800 transition-all duration-200" />
            <small class="hidden text-xs font-medium text-red-400" data-error></small>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-2" data-field-wrapper>
              <label for="phone" class="block text-sm font-semibold text-yellow-400">Teléfono</label>
              <input id="phone" name="phone" type="tel" placeholder="" class="w-full rounded-lg border border-yellow-400/30 bg-gray-800/50 px-4 py-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 focus:bg-gray-800 transition-all duration-200" />
              <small class="hidden text-xs font-medium text-red-400" data-error></small>
            </div>
            <div class="space-y-2" data-field-wrapper>
              <label for="service" class="block text-sm font-semibold text-yellow-400">Servicio de Interés</label>
              <select id="service" name="service" class="w-full rounded-lg border border-yellow-400/30 bg-gray-800/50 px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 focus:bg-gray-800 transition-all duration-200">
                <option value="" class="bg-gray-800 text-gray-400">Selecciona un servicio</option>
                <option value="personal-training" class="bg-gray-800 text-white">Entrenamiento Personal 1:1</option>
                <option value="online-coaching" class="bg-gray-800 text-white">Asesoría Online</option>
                <option value="nutrition-coaching" class="bg-gray-800 text-white">Asesoría Nutricional</option>
                <option value="consultation" class="bg-gray-800 text-white">Consulta Gratuita</option>
              </select>
              <small class="hidden text-xs font-medium text-red-400" data-error></small>
            </div>
          </div>

          <div data-field-wrapper class="space-y-2">
            <label for="message" class="block text-sm font-semibold text-yellow-400">Mensaje *</label>
            <textarea id="message" name="message" data-required rows="5" placeholder="Cuéntame sobre tus objetivos..." class="w-full rounded-lg border border-yellow-400/30 bg-gray-800/50 px-4 py-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 focus:bg-gray-800 transition-all duration-200 resize-y min-h-[120px]"></textarea>
            <small class="hidden text-xs font-medium text-red-400" data-error></small>
          </div>

          <div class="flex items-start gap-3 rounded-xl bg-yellow-400/10 border border-yellow-400/40 p-4">
            <input id="consent" type="checkbox" class="h-5 w-5 rounded border-yellow-400/50 bg-gray-800/50 text-yellow-400 focus:ring-yellow-400 focus:ring-offset-0 focus:ring-offset-gray-900 mt-0.5 flex-shrink-0" required />
            <label for="consent" class="text-sm text-gray-300 leading-relaxed cursor-pointer">Acepto ser contactado y recibir información relacionada con los servicios.</label>
          </div>

          <button type="submit" class="w-full inline-flex items-center justify-center bg-gradient-to-r from-yellow-400 to-yellow-500 hover:from-yellow-500 hover:to-yellow-600 active:from-yellow-600 active:to-yellow-700 text-black font-bold rounded-lg py-4 px-6 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:ring-offset-2 focus:ring-offset-gray-900 disabled:opacity-60 disabled:cursor-not-allowed gap-2 min-h-[56px] shadow-lg hover:shadow-yellow-400/25" id="submit-btn">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/></svg>
            <span>Enviar Mensaje</span>
            <span class="hidden w-5 h-5 border-2 border-black/40 border-t-black rounded-full animate-spin flex-shrink-0" id="spinner"></span>
          </button>

          <div id="form-success" class="hidden rounded-lg bg-green-50 border border-green-400/60 px-4 py-3 text-sm font-medium text-green-700 flex items-start gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
            <span>¡Mensaje enviado! Te contactaré pronto.</span>
          </div>
          <div id="form-error" class="hidden rounded-lg bg-red-50 border border-red-400/60 px-4 py-3 text-sm font-medium text-red-700 flex items-start gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10A8 8 0 11.001 9.999 8 8 0 0118 10zM9 5h2v6H9V5zm0 8h2v2H9v-2z" clip-rule="evenodd"/></svg>
            <span>Revisa los campos marcados y vuelve a intentar.</span>
          </div>
        </form>
      </div>

      <!-- Sidebar Info -->
      <div class="space-y-10 w-full">
        <div class="space-y-6">
          <h3 class="text-2xl font-semibold text-white">Información de Contacto</h3>
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-xl bg-yellow-400/20 flex items-center justify-center text-yellow-400">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347"/></svg>
              </div>
              <div>
                <h4 class="font-medium text-white">WhatsApp</h4>
                <p class="text-gray-300 text-sm mb-1">Respuesta rápida garantizada</p>
                <a href="https://wa.me/34618587665" target="_blank" class="inline-flex items-center text-yellow-400 hover:text-yellow-500 transition-colors text-sm">+34 618 58 76 65<svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg></a>
              </div>
            </div>
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-xl bg-yellow-400/20 flex items-center justify-center text-yellow-400">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
              </div>
              <div>
                <h4 class="font-medium text-white">Email</h4>
                <p class="text-gray-300 text-sm mb-1">Para consultas detalladas</p>
                <a href="mailto:jocrisfit@gmail.com" class="text-yellow-400 hover:text-yellow-500 text-sm transition-colors">jocrisfit@gmail.com</a>
              </div>
            </div>
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-xl bg-yellow-400/20 flex items-center justify-center text-yellow-400">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
              </div>
              <div>
                <h4 class="font-medium text-white">Ubicación</h4>
                <p class="text-gray-300 text-sm mb-1">Entrenamientos online</p>
                <p class="text-yellow-400 text-sm">Almería, Almería</p>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white/10 border border-yellow-400/30 rounded-2xl p-6 space-y-4">
          <h4 class="font-semibold text-white text-lg">Acciones Rápidas</h4>
          <a href="https://wa.me/34618587665" target="_blank" class="flex items-center justify-between px-4 py-3 rounded-lg bg-green-600 hover:bg-green-700 active:bg-green-800 text-white text-sm font-medium transition-all duration-200 w-full">
            <span>WhatsApp Directo</span>
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
          </a>
          <button onclick="document.getElementById('contact-form')?.scrollIntoView({behavior:'smooth'})" class="flex items-center justify-between w-full px-4 py-3 rounded-lg bg-yellow-400 hover:bg-yellow-500 active:bg-yellow-600 text-black text-sm font-semibold transition-all duration-200">
            <span>Llenar Formulario</span>
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/></svg>
          </button>
        </div>

        <div class="text-center">
          <span class="inline-flex items-center bg-yellow-400/20 text-yellow-400 px-4 py-2 rounded-full text-xs font-semibold tracking-wide">
            <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
            Respuesta &lt; 24h
          </span>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contact-form') as HTMLFormElement;
    if(!form) return;
    const success = document.getElementById('form-success');
    const errorBox = document.getElementById('form-error');
    const btn = document.getElementById('submit-btn');
    const spinner = document.getElementById('spinner');

    const emailRegex = /[^@\s]+@[^@\s]+\.[^@\s]+/;

    function setError(wrapper: Element, msg: string){
      const input = wrapper.querySelector('input, textarea, select') as HTMLInputElement | HTMLTextAreaElement | HTMLSelectElement;
      const err = wrapper.querySelector('[data-error]');
      if(!input || !err) return;
      if(msg){
        input.classList.add('border-red-500','ring-1','ring-red-400/60');
        err.textContent = msg;
        err.classList.remove('hidden');
      } else {
        input.classList.remove('border-red-500','ring-1','ring-red-400/60');
        err.textContent = '';
        err.classList.add('hidden');
      }
    }

    form.querySelectorAll('[data-required]').forEach(el => {
      el.addEventListener('input', () => {
        const wrapper = el.closest('[data-field-wrapper]');
        if(wrapper) setError(wrapper, '');
      });
    });

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      success?.classList.add('hidden');
      errorBox?.classList.add('hidden');

      let valid = true;
      form.querySelectorAll('[data-required]').forEach(el => {
        const input = el as HTMLInputElement | HTMLTextAreaElement | HTMLSelectElement;
        const value = input.value.trim();
        const wrapper = el.closest('[data-field-wrapper]');
        if(!value){
          valid = false; if(wrapper) setError(wrapper, 'Campo requerido'); return;
        }
        if(el.getAttribute('data-type') === 'email' && !emailRegex.test(value)){
          valid = false; if(wrapper) setError(wrapper, 'Email inválido'); return;
        }
        if(wrapper) setError(wrapper, '');
      });

      const consent = document.getElementById('consent') as HTMLInputElement;
      if(consent && !consent.checked){ valid = false; }

      if(!valid){ errorBox?.classList.remove('hidden'); return; }

      btn?.setAttribute('disabled','true');
      spinner?.classList.remove('hidden');

      try {
        await new Promise(r => setTimeout(r, 1200));
        form.reset();
        success?.classList.remove('hidden');
      } catch(err){
        errorBox?.classList.remove('hidden');
      } finally {
        btn?.removeAttribute('disabled');
        spinner?.classList.add('hidden');
        setTimeout(()=> success?.classList.add('hidden'), 6000);
      }
    });
  });
</script>